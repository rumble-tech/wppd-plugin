{
    "name": "rumble/wppd-plugin",
    "description": "A plugin to collector information about the WordPress instance and sends it to the configured collector service.",
    "type": "wordpress-plugin",
    "license": "GPL v2 (or later)",
    "version": "0.1.0",
    "require": {
        "php": ">=7.4"
    },
    "autoload": {
        "psr-4": {
            "Rumble\\WPPD\\": "src/"
        }
    },
    "scripts": {
        "build": "vendor/bin/phing -Dversion=$(php -r 'echo json_decode(file_get_contents(\"composer.json\"))->version;') build",
        "dev": "docker-compose -f docker/compose.dev.yml -f docker/compose.dev.override.yml up",
        "cs:check": "phpcs --standard=WordPress --extensions=php --ignore=vendor .",
        "cs:fix": "phpcbf --standard=WordPress --extensions=php --ignore=vendor ."
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.9",
        "wp-coding-standards/wpcs": "^3.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.2",
        "phing/phing": "^3.0"
    },
    "allow-plugins": {
        "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
